<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>Task Schedules</strong>
  <table  id="tasksSchedulesTable">
      <thead>
        <th>
          Name
        </th>
        <th>
          Due Date
        </th>
      </thead>
      <tbody>
          <%= render @user.task_schedules %>
      </tbody>
  </table>
</p>

<p>
  <strong>Tasks</strong>
  <table id="tasksTable">
      <thead>
        <th>
          Name
        </th>
        <th>
          Complete
        </th>
        <th>
          Due Date
        </th>
      </thead>
      <tbody>
          <%= render partial: '/tasks/tasks', collection: @user.tasks, as: :task %>
      </tbody>
  </table>
</p>


<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
